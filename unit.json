{
  "listeners": {
    "*:8000": {
      "pass": "routes"
    }
  },
  "routes": [
    {
      "match": {
        "uri": ["*/static/*", "*/media/*"]
      },
      "action": {
        "share": "/code/"
      }
    },
    {
      "action": {
        "pass": "applications/django"
      }
    }
  ],
  "applications": {
    "django": {
      "type": "python",
      "path": "/code",
      "module": "core.asgi",
      "environment": {
        "ON_PRODUCTION": "True"
      }
    }
  },
  "access_log": {
    "path": "/dev/stdout",
    "format": "[$time_local] \"$request_line\" $status $body_bytes_sent \"$header_referer\""
  }
}
